<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MySSID"
        android:id="@+id/ssid"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:layout_marginRight="@dimen/list_item_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/crypto_wpa2"
        android:id="@+id/crypto"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/font_crypto_wpa2"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="@dimen/list_item_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/list_essid_item_description"
        android:id="@+id/description"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@+id/ssid"
        android:layout_below="@+id/ssid" />
</RelativeLayout>
