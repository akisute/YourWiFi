<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:text="32:61:3C:4E:B6:05"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/crypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:text="@string/crypto_wpa2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/font_crypto_wpa2" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bssid"
        android:layout_below="@id/bssid"
        android:text="@string/list_network_item_level"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/level"
        android:layout_below="@id/level"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:text="@string/list_network_item_frequency_channel"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/capabilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/frequency"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:layout_toEndOf="@id/frequency"
        android:text="[WPA2][ESS]"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
